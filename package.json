{
  "name": "searchmate",
  "version": "1.4.0",
  "description": "A fast file search bar app for Windows",
  "main": "src/main/index.js",
  "scripts": {
    "start": "npm run bundle && electron .",
    "dev": "npm run bundle && electron .",
    "bundle": "esbuild src/renderer/renderer.js --bundle --outfile=src/renderer/renderer.bundle.js --platform=browser --format=iife",
    "bundle:watch": "esbuild src/renderer/renderer.js --bundle --outfile=src/renderer/renderer.bundle.js --platform=browser --format=iife --watch",
    "build": "npm run bundle && electron-builder",
    "build:portable": "npm run bundle && electron-builder --win portable",
    "build:installer": "npm run bundle && electron-builder --win nsis",
    "version:patch": "npm version patch --no-git-tag-version --force",
    "version:minor": "npm version minor --no-git-tag-version --force",
    "version:major": "npm version major --no-git-tag-version --force"
  },
  "keywords": [
    "search",
    "files",
    "electron"
  ],
  "author": "Arash Shalchian",
  "license": "MIT",
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.27.2"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "chokidar": "^3.6.0",
    "electron-store": "^10.1.0"
  },
  "build": {
    "appId": "com.searchmate.app",
    "productName": "SearchMate",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    },
    "portable": {
      "artifactName": "SearchMate-${version}-portable.exe"
    }
  }
}
